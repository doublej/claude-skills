#!/bin/bash
# Commit-msg hook: enforce conventional commit format (opt-in)

# Check if conventional commits are enabled
if [ ! -f ".conventional-commits" ]; then
    # Not enabled, skip
    exit 0
fi

COMMIT_MSG_FILE=$1
COMMIT_MSG=$(cat "$COMMIT_MSG_FILE")

# Pattern for conventional commits
PATTERN="^(feat|fix|docs|style|refactor|perf|test|chore|build|ci|revert)(\(.+\))?: .+"

if ! echo "$COMMIT_MSG" | grep -qE "$PATTERN"; then
    echo "âœ— Commit message does not follow conventional commit format"
    echo ""
    echo "Format: <type>(<scope>): <description>"
    echo ""
    echo "Types:"
    echo "  feat:     New feature"
    echo "  fix:      Bug fix"
    echo "  docs:     Documentation"
    echo "  style:    Code style (formatting, etc.)"
    echo "  refactor: Code refactoring"
    echo "  perf:     Performance improvement"
    echo "  test:     Tests"
    echo "  chore:    Maintenance"
    echo "  build:    Build system"
    echo "  ci:       CI/CD"
    echo "  revert:   Revert previous commit"
    echo ""
    echo "Examples:"
    echo "  feat: add user authentication"
    echo "  fix(api): handle null response"
    echo "  docs: update README with examples"
    echo ""
    echo "To disable this check, remove .conventional-commits file"
    exit 1
fi

exit 0
